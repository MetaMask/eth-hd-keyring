{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["./test", "dist", "node_modules","jest.config.ts"]
}
